<h1>Enter your shit</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= f.label :eventname %>
      <%= f.text_field :eventname, autofocus: true, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, autofocus: true, class: 'form-control' %>

      <%= f.submit "Create my event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>